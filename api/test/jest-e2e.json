{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "testTimeout": 30000,
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "../src/**/*.(t|j)s",
        "!../src/**/*.module.ts",
        "!../src/**/*.interface.ts",
        "!../src/**/*.dto.ts",
        "!../src/**/*.entity.ts",
        "!../src/main.ts",
        "!../src/**/*.config.ts"
    ],
    "coverageDirectory": "../coverage-e2e"
}
